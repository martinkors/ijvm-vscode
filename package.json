{
  "name": "ijvm-vscode",
  "displayName": "ijvm vscode",
  "description": "A syntax highlighter and linter for the ijvm language.",
  "version": "1.0.4",
  "author": "martinkors",
  "publisher": "martinkors",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.52.0",
    "node": "*"
  },
  "keywords": [
    "ijvm"
  ],
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/martinkors/ijvm-vscode"
  },
  "contributes": {
    "languages": [
      {
        "id": "ijvm",
        "aliases": [
          "IJVM",
          "ijvm"
        ],
        "extensions": [
          ".j"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ijvm",
        "scopeName": "source.j",
        "path": "./syntaxes/ijvm.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "IJVM configuration",
      "properties": {
        "ijvmLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:ijvm"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "vscode-languageserver": "^7.0.0"
  }
}
